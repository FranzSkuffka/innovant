.Overview
  &-heading
    t-h2()
    margin vr-block(.5)
    text-align center

.InnovationCard
  relative()
  cursor pointer
  margin vr-block(1)
  size vr-block(8)
  material-shadow 2
  transition()
  overflow hidden
  color black
  display flex
  align-items center
  justify-content center
  &-downloadBar
    display block
    absolute top 0 left 0
    width 100%
    background-color inherit
    display flex
    z-index 200
  &-download
    color inherit
    text-decoration none
    padding vr-block(.5)
    flex-grow 1
    text-align center
    &:hover
      background white
      color black
  &-preview
    size 100%
    z-index 100
    absolute top 0 left 0
  &-title
    absolute bottom 0 left 0
    width 100%
    padding vr-block(1) vr-block(.5)
    text-align center
  &-icon
    size vr-block(1.5)
    display flex
    flex-direction column
    justify-content center
    align-items center
    &:before
      font-size 2em
    &.show:before
      @extend $eye
    &.download:before
      @extend $android-download
  &-ribbon
    size vr-block(3) vr-block(.5)
    absolute top vr-block(.5) left vr-block(-1)
    background black
    transform rotate(-45deg)
  &:hover
    material-shadow 4
  &-wrap
    display flex
    flex-wrap wrap
    justify-content flex-start
    align-items center

.InnovationCard--clear
.InnovationCard--create
  background darkgrey

.InnovationCard--clear
  color red
  .InnovationCard-icon:before
    @extend $android-remove
.InnovationCard--create
  color green
  .InnovationCard-icon:before
    @extend $android-create
