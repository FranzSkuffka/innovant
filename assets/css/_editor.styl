.Editor
  display flex
  background #EEE
  padding-right vr-block(10)
  &-view
    flex-grow 2
    background white
    transform scale(.90)
    box-shadow 0 0 47px 0px rgba(0,0,0,0.29)
  &Toolbar
    height 100vh
    fixed top 0 right 0
    background black
    width @padding-right
    padding vr-block(1)
    color white
    &-title
      t-h2()
      color white
    &-label
      display block
      margin vr-block(1) 0 vr-block(.5) 0
    &-button
      button white
      margin-top vr-block(1)
