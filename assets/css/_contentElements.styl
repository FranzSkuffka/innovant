// CONTENT ELEMENTS

.Heading
  t-h2()
  .Module:first-child &
    t-h1()

.Image
  absolute top 0 left 0
  width 100%
  z-index -1
  transform scale(1.3)
  opacity 0.7

.Table-wrap
  margin-top vr-block(2)
  display flex
  justify-content center
  align-items center
  th
    font-weight bold
    border-bottom 1px solid black
  td
  th
    padding vr-block(.4)
    min-height vr-block(1)
    text-align center
    &:first-child
      text-align left
    &:not(:last-child)
      border-right 1px solid black
